<div class="main"> <!--main container for rest of page-->
  <div class="row"> <!--main row-->
  
    <div class="col-md-2"><!--empty left column space-->
    </div>
      
    <div class="col-md-8"><!--main middle for image and nav links--> 

      <!--for the cover image -->
      <div class="row no-pad container-border">
       
        <div class="image-container">
          <img src="http://vignette3.wikia.nocookie.net/harrypotter/images/b/bd/Dhogwarts.jpg/revision/latest?cb=20120128145344"
          class="img-responsive cover-image" alt="Responsive image">

          <img src="http://ndl.mgccw.com/mu3/000/488/259/sss/42409d600b984fc9934a52f28291ba27_small.png" 
               class="img-thumbnail" id ="profile-image" alt="profile">      
        </div>
        
        <div class="row no-pad container-border" >
          <div  class="col-md-12 text-center">
            <div class="list-group list-group-horizontal">
              <a href="timeline.html" class="list-group-item">Timeline</a>
              <a href="#" class="list-group-item">About</a>
              <a href="photos.html" class="list-group-item">Photos</a>
              <a href="friends.html" class="list-group-item">Friends</a>

              <%if current_user_view?%>
                <a href="<%= edit_user_path(@user)%>" class="list-group-item active">Edit Profile</a>
              <% else %>
                <a href="#" class="list-group-item">Edit Profile</a>
              <% end %>  

            </div>
          </div>
        </div>
    
       <div class="panel-container row no-pad">
        <div class="panel panel-default page-type-panel-body panel-style"> 
          <div class="panel-body panel-body-style">
            <strong>Edit Profile</strong>
          </div>
        </div>
      </div>

      <%= form_for @user do |user_fields| %>
      
        <section class="col-md-6">
          <h4 style="text-align:center;">Basic Information</h4>
          
          <div class="form-group form-group-xs">
            <label class="col-sm-4 control-label" for="birthday">Birthday
            </label>
            <div class="col-sm-8">
             <%= @user.birth_month %>/<%= @user.birth_day %>/<%= @user.birth_year %>
            </div>
          </div>
          
          <div class="form-group form-group-xs">
            <label class="col-sm-4 control-label" for="college">College</label>
            <div class="col-sm-8">
              <input class="form-control" type="text" "user[college]" id="college">
            </div>
          </div>
          
          <div class="form-group form-group-xs">
            <label class="col-sm-4 control-label" for="hometown">
              Hometown
            </label>
            <div class="col-sm-8">
              <input class="form-control" type="text" name="user[hometown]" id="hometown">
            </div>
          </div> 
          
          <div class="form-group form-group-xs">
            <label class="col-sm-4 control-label" for="country-lived">
              Currenty lives in
            </label>
            <div class="col-sm-8">
              <input class="form-control" type="text" name="user[domicile]" id="domicile">
            </div>
          </div> 
        </section>    
  
        <section class="col-md-6">
          <div style="margin:0;padding:0;margin-top:1em;">
            <div class="form-group">
              <label for="words">Words to live by:</label>
              <textarea class="form-control" rows="2" id="words" name="user[my_words]"></textarea>
            </div>
          </div>

          <div style="margin:0;padding:0;margin-top:1em;">
            <div class="form-group">
              <label for="about">About me:</label>
              <textarea class="form-control" rows="4"  name="user[about_me]" id="about"></textarea>
            </div>
          </div>
        </section>
        <br>
        <button type="submit" name="submit" class="btn btn-info btn-block save-changes-btn">
            Save your changes
        </button>
        <br>
      <% end %>  
    </div>  
      
    <div class="col-md-2">
    </div>
  </div>
</div> 
