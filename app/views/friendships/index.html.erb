
  <div class="main"> <!--main container for rest of page-->
    <div class="row no-pad"> <!--main row that for rest of page-->
        
      <div class="col-md-8 col-md-offset-2"><!--main middle for core information--> 
  
        <!--for the cover image -->
        <div class="container-border row no-pad">
         
          <div class="image-container">
            <img src="http://vignette3.wikia.nocookie.net/harrypotter/images/b/bd/Dhogwarts.jpg/revision/latest?cb=20120128145344"
            class="img-responsive cover-image" alt="Responsive image">

            <img src="http://ndl.mgccw.com/mu3/000/488/259/sss/42409d600b984fc9934a52f28291ba27_small.png" 
                 class="img-thumbnail" id ="profile-image" alt="profile">    
          </div>
          
          <!--for the navigation bar to diffetent pages-->
          <div class="row no-pad border-container"> 

            <div  class="col-md-12 text-center">
              <div class="list-group list-group-horizontal">

                <% if current_user_view? %>
                  <a href="<%= new_user_post_path(@user) %>" class="list-group-item">Timeline</a>
                <% else %>
                  <a href="<%= user_posts_path(@user) %>" class="list-group-item">Timeline</a>
                <% end %>

               <a href= "<%= user_path(@user) %>" class="list-group-item">About</a>
                <a href="#" class="list-group-item">Photos</a>
                <a href="<%= friendships_path(user_id: @user) %>" 
                             class="list-group-item active">Friends</a>
                             
                <%if current_user_view?%>
                  <a href="<%= edit_user_path(@user) %>" class="list-group-item">Edit Profile</a>
                <% else %>
                  <a href="#" class="list-group-item">Edit Profile</a>
                <% end %> 

               </div>
            </div>
          </div> <!--end navigation bar to diffetent pages-->
        </div> <!--end top container-->

        <!--About information container-->
        <div class="row no-pad container-border page-type">
          
          <div class="panel-container row no-pad">
            <div class="panel panel-default page-type-panel-body panel-style"> 
              <div class="panel-body panel-body-style">
                <strong>Friends</strong>
              </div>
            </div>
          </div>

          <% is_row = true %>
          <% @friends.each do |friend| %> 
            
            <% if is_row %>
               <div class="row no-pad basic-margin">
            <% end %> 

              <div class="col-md-6 container-border">

                <div class="row no-pad">
                  <div class="col-md-4">
                    <img src="assets/noun_161469_cc.png" alt="friends"
                         class="friend-photos img-rounded img-thumbnail
                                pull-left">
                  </div>
                  
                  <div class="col-md-4 text-capitalize small-font">
                       <p class="center-friend-info">
                         <%= friend_link(friend) %>
                       </p>   
                  </div>
                  
                  <div class="col-md-4 text-capitalize">
                    <p class="center-unfriend">
                      <% if current_user_view? %>
                         <button type="button" class="btn btn-secondary btn-sm">
                               Unfriend me!
                         </button>
                      <% end %>    
                    </p>
                  </div>
                
                </div>  

              </div>
           
              <div class="col-md-6 container-border">
                
              </div>
             <% if is_row %>
               </div>
            <% end %>
            <% !is_row %>
          <% end %>
          
        </div> 
      </div><!--End of main middle for image and nav links--> 
        
      <div class="col-md-2">
      </div>
    </div>   
  </div> 
  
  </body>
</html>